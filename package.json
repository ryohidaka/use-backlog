{
  "name": "use-backlog",
  "version": "0.1.5",
  "description": "React Hooks library for Backlog.",
  "type": "module",
  "main": "./dist/index.umd.cjs",
  "module": "./dist/index.js",
  "files": [
    "dist"
  ],
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "require": "./dist/index.umd.cjs"
    }
  },
  "scripts": {
    "dev": "vite",
    "build": "tsc && vite build --emptyOutDir false",
    "preview": "vite preview",
    "prepare": "husky install",
    "test": "VITEST_MIN_THREADS=6 VITEST_MAX_THREADS=6 vitest run --passWithNoTests",
    "coverage": "vitest run --coverage",
    "format": "npx prettier . --write"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/ryohidaka/use-backlog.git"
  },
  "author": "ryohidaka",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/ryohidaka/use-backlog/issues"
  },
  "homepage": "https://github.com/ryohidaka/use-backlog#readme",
  "devDependencies": {
    "@testing-library/jest-dom": "^6.4.2",
    "@testing-library/react": "^15.0.5",
    "@testing-library/user-event": "^14.5.2",
    "@types/node": "^20.12.2",
    "@types/react": "^18.2.73",
    "@types/react-dom": "^18.2.23",
    "@vitejs/plugin-react-swc": "^3.6.0",
    "@vitest/coverage-v8": "^1.4.0",
    "eslint": "^9.1.1",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-n": "^17.3.1",
    "eslint-plugin-react-refresh": "^0.4.6",
    "happy-dom": "^14.3.9",
    "husky": "^9.0.11",
    "lint-staged": "^15.2.2",
    "prettier": "3.2.5",
    "typescript": "^5.2.2",
    "vite": "^5.2.7",
    "vite-plugin-dts": "^3.8.1",
    "vite-tsconfig-paths": "^4.3.2",
    "vitest": "^1.4.0"
  },
  "peerDependencies": {
    "react": "^18.2.0",
    "react-dom": "^18.2.0"
  },
  "lint-staged": {
    "**/*": "prettier --write --ignore-unknown"
  },
  "dependencies": {
    "backlog-js": "^0.13.1",
    "swr": "^2.2.4"
  }
}
